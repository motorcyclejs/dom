{
  "name": "@motorcycle/dom",
  "version": "3.1.0",
  "description": "DOM Driver written only for most.js",
  "main": "lib/commonjs/index.js",
  "module": "lib/es2015/index.js",
  "jsnext:main": "lib/es2015/index.js",
  "typings": "lib/es2015/index.d.ts",
  "scripts": {
    "test:lint": "tslint src/**/*.ts src/*.ts",
    "test:unit": "mocha -r ts-node/register -r jsdom-global/register test/index.ts",
    "test:debug": "devtool -r ts-node/register -r jsdom-global/register ./node_modules/.bin/mocha test/index.ts",
    "test": "npm run test:lint && npm run test:unit",
    "commit": "git-cz",
    "changelog": "conventional-changelog --infile CHANGELOG.md --same-file --release-count 0 --preset angular",
    "postchangelog": "git add CHANGELOG.md && git commit -m 'docs(CHANGELOG): append to changled' && git push origin master",
    "build:es2015": "tsc -P tsconfig.json",
    "build:commonjs": "tsc -P tsconfig-commonjs.json",
    "build": "npm run build:es2015 && npm run build:commonjs",
    "preversion": "npm run build",
    "postversion": "git push origin master && git push origin --tags && npm publish && npm run changelog",
    "release:minor": "npm version minor -m 'chore(package): v%s'",
    "release:major": "npm version major -m 'chore(package): v%s'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/motorcyclejs/dom.git"
  },
  "keywords": [
    "Cycle",
    "Cyclejs",
    "DOM",
    "Driver",
    "most",
    "mostjs",
    "snabbdom",
    "server-side-rendering",
    "ssr",
    "motorcycle"
  ],
  "author": "Tylor Steinberger",
  "contributors": [
    "Frederik Krautwald <fkrautwald@gmail.com> (https://github.com/Frikki)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/motorcyclejs/dom/issues"
  },
  "homepage": "https://github.com/motorcyclejs/dom#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "node ./node_modules/.bin/validate-commit-msg"
    }
  },
  "dependencies": {
    "@most/dom-event": "^1.3.1",
    "@most/prelude": "^1.4.1",
    "most": "^1.0.5",
    "most-subject": "^5.1.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.46",
    "browserify": "^13.1.1",
    "commitizen": "^2.8.6",
    "conventional-changelog-cli": "^1.2.0",
    "cz-conventional-changelog": "^1.2.0",
    "ghooks": "^1.3.2",
    "jsdom": "^9.8.3",
    "jsdom-global": "^2.1.0",
    "mocha": "^3.1.2",
    "most": "^1.0.5",
    "testem": "^1.13.0",
    "ts-node": "^1.7.0",
    "tsify": "^2.0.2",
    "tslint": "^4.0.0-dev.1",
    "typescript": "^2.1.0-dev.20161110",
    "uglify-js": "^2.7.4",
    "validate-commit-msg": "^2.8.2"
  }
}
